{
    "include":  [
                    "next-env.d.ts",
                    "**/*.ts",
                    "**/*.tsx",
                    "**/*.js",
                    "**/*.jsx",
                    ".next/types/**/*.ts",
                    ".next/dev/types/**/*.ts",
                    "**/*.mts"
                ],
    "exclude":  [
                    "node_modules"
                ],
    "compilerOptions":  {
                            "noEmit":  true,
                            "strict":  false,
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ],
                            "module":  "esnext",
                            "incremental":  true,
                            "moduleResolution":  "bundler",
                            "isolatedModules":  true,
                            "skipLibCheck":  true,
                            "allowJs":  true,
                            "target":  "ES2017",
                            "resolveJsonModule":  true,
                            "esModuleInterop":  true,
                            "paths":  {
                                          "@/*":  [
                                                      "./src/*"
                                                  ]
                                      },
                            "lib":  [
                                        "dom",
                                        "dom.iterable",
                                        "esnext"
                                    ],
                            "jsx":  "react-jsx"
                        }
}
